<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Fridge Management</title>
    </head>
    <body>
        <%- include('./partials/navbar') %>
        <h1>Groceries</h1>
        <ul>
            <% products.forEach(product => { %>
            <li>
                <strong>Name:</strong>
                <a href="/<%= product.id %>/detail"> <%= product.name %></a> -
                <strong>Description:</strong> <%= product.description %> -
                <strong>Price:</strong> $<%= Number(product.price).toFixed(2) %>
                - <strong>Quantity:</strong> <%= product.quantity %> -
                <strong>Date Added:</strong> <%= new
                Date(product.date_added).toLocaleDateString() %>

                <!-- Update button -->
                <a href="/<%= product.id %>/update">
                    <button type="button">Update</button>
                </a>

                <!-- Delete button -->
                <form
                    action="/<%= product.id %>/delete"
                    method="POST"
                    style="display: inline"
                >
                    <button type="submit">Delete</button>
                </form>
            </li>
            <% }) %>
        </ul>
        <a href="/create">Add New Product</a>
    </body>
</html>
